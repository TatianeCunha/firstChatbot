CREATE TABLE paciente (
 id INTEGER NOT NULL,
 nome VARCHAR(255) NOT NULL,
 idade INTEGER NOT NULL,
 sexo VARCHAR(255) NOT NULL,
 doencaCronica VARCHAR(255) NOT NULL,
 alergia VARCHAR(255) NOT NULL,
 cirurgia VARCHAR(255) NOT NULL,

 constraint pk_paciente PRIMARY KEY(id)
);

CREATE SEQUENCE seq_paciente
 AS INT
 INCREMENT BY 1
 MINVALUE 1
 NO MAXVALUE
 START WITH 1
 NO CYCLE
 OWNED BY paciente.id;

 ----------------------------------------------

CREATE TABLE lista_sintomas (
 id INTEGER NOT NULL,
 nome VARCHAR(255) NOT NULL,
 constraint pk_lista_sintomas PRIMARY KEY(id)
);

CREATE SEQUENCE seq_lista_sintomas
 AS INT
 INCREMENT BY 1
 MINVALUE 1
 NO MAXVALUE
 START WITH 1
 NO CYCLE
 OWNED BY lista_sintomas.id;

